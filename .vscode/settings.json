{
    "grammarly.selectors": [
        {
            "language": "markdown",
            "scheme": "file"
        }
    ],
    "editor.minimap.enabled": true,
    "editor.wrappingIndent": "same",
    "editor.overviewRulerBorder": false,
    "editor.lineHeight": 24,
    "[markdown]": {
        "editor.quickSuggestions": {
            "other": "on",
            "comments": "off",
            "strings": "off"
        }
    },
    "files.defaultLanguage": "markdown",
    "files.exclude": {
        "**/node_modules": true
    },
    "files.watcherExclude": {
        "**/node_modules": true
    },
    "foam.edit.linkReferenceDefinitions": "off",
    "markdown.preview.breaks": true,
    "foam.files.ignore": [
        "journal",
        "org",
        "vault_buffer",
        ".foam",
        ".vscode"
    ],
    "foam.orphans.exclude": [
        "journal",
        "org",
        "vault_buffer",
    ],
    "foam.graph.style": {},
    "foam.placeholders.exclude": [],
    "foam.preview.embedNoteInContainer": false,
    "note-macros": {
        "Weekly": [
            {
                "type": "note",
                "directory": "",
                "extension": ".md",
                "name": "weekly",
                "date": "yyyy-W"
            }
        ]
    },
}